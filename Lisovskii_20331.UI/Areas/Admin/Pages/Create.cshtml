@page
@model Lisovskii_20331.UI.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label asp-for="Book.Name" class="form-label">Название</label>
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Book.Description" class="form-label">Описание</label>
                <input asp-for="Book.Description" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Book.Pages" class="form-label">Количество страниц</label>
                <input asp-for="Book.Pages" class="form-control" />
            </div>
            <div class="mb-3">
            <select asp-for="Book.Genre" asp-items="@((SelectList)ViewData["GenreId"])">
                <option value="">Выберите жанр</option>
            </select>
            </div>
        
            <div class="mb-3">
                <label asp-for="Image" class="form-label">Изображение</label>
                <input asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 